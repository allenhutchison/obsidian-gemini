{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"declaration": true,
		"declarationMap": true,
		"composite": true
	},
	"include": ["**/*.ts"],
	"exclude": ["docs/.vitepress/**"]
}
